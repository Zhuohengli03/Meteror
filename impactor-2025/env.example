# NASA API Configuration
NASA_API_KEY=DEMO_KEY
NASA_BASE_URL=https://api.nasa.gov/neo/rest/v1

# GeoNames API Configuration
# Register for free at https://www.geonames.org/login
# Used to fetch nearby cities dynamically based on impact location
GEONAMES_USERNAME=your_geonames_username_here

# USGS Configuration
USGS_BASE_URL=https://earthquake.usgs.gov/fdsnws/event/1
USGS_DEM_BASE_URL=https://elevation.nationalmap.gov/arcgis/rest/services

# Tile Server Configuration
TILES_BASE_URL=http://backend:8000/api/tiles
TILES_CACHE_TTL=3600

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_WORKERS=4

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_MAPBOX_TOKEN=your_mapbox_token_here
VITE_ARCGIS_API_KEY=your_arcgis_token_here

# Database Configuration (Optional)
REDIS_URL=redis://redis:6379/0
DATABASE_URL=sqlite:///./data/impactor.db

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# Development Configuration
DEBUG=true
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-here
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Performance
MAX_WORKERS=4
WORKER_TIMEOUT=30
